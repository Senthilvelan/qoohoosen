<?xml version="1.0" encoding="utf-8"?>


<com.qoohoosen.widget.glass.GlassView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_marginStart="2dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="1dp"
    android:layout_marginBottom="4dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/audio_button_play"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="2dp"
            android:adjustViewBounds="true"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:contentDescription="Audio play button"
            android:scaleType="centerInside"
            android:visibility="visible"
            app:srcCompat="@android:drawable/ic_media_play" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@+id/audio_button_play"
            android:maxLines="1"
            android:paddingTop="10dp"
            android:paddingBottom="2dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="normal"
            tools:text="1."
            tools:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewTitle"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="16dp"
            android:layout_toEndOf="@+id/audio_button_play"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingTop="2dp"
            android:paddingBottom="16dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            tools:text=""
            tools:textColor="@color/white" />

        <com.github.scrobot.audiovisualizer.SoundWaveView
            android:id="@+id/vWaveView"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_below="@+id/textViewDescription"
            android:layout_marginTop="40dp"
            android:visibility="visible" />

        <!--        <com.github.scrobot.audiovisualizer.SoundVisualizerBarView
                    android:id="@+id/vWaveView"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_below="@+id/textViewDescription"
                    android:layout_marginTop="40dp"
                    android:visibility="visible" />-->


    </RelativeLayout>
</com.qoohoosen.widget.glass.GlassView>

